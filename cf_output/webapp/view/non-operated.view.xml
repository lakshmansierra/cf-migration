<mvc:View controllerName="sierra.pra.PRA_Custom.controller.non-operated" height="100%" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:f="sap.f" xmlns:fb="sap.ui.comp.filterbar" xmlns:vm="sap.ui.comp.variants">
	<f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<vm:VariantManagement standardItemText="Non-Operated Payout Setup and Inquiry"></vm:VariantManagement>
				</f:heading>
				<f:actions>
					<ToolbarSpacer/>
					<Button text="ADD" icon="sap-icon://create-form" type="Transparent"/>
					<Button text="EDIT" icon="sap-icon://write-new-document" type="Transparent" press="onToggleFooter"/>
					<Button text="DELETE" icon="sap-icon://delete" type="Transparent"/>
					<Button text="CANCEL" icon="sap-icon://reset" type="Transparent"/>
				</f:actions>
			</f:DynamicPageTitle>
		</f:title>
		<!-- DynamicPage Header -->
		
		
		<f:header>
			<f:DynamicPageHeader pinnable="true">
			
				
				<f:content>
				
					<fb:FilterBar id="filterbar" reset="onReset" search="onSearch" useToolbar="true" showGoOnFB="true">
						<fb:filterItems>
							
							<fb:FilterItem name="w" label="Payout ID">
								<fb:control>
									<Input id="productInput2" placeholder="" showSuggestion="true" showValueHelp="true" editable="false">
									</Input>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="A" label="Company">
								<fb:control>
									<Input id="productInput21" placeholder="" value="Sierra Digital" showSuggestion="true" showValueHelp="true" editable="false">
									</Input>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="B" label="Cost Center">
								<fb:control>
									<Select id="slCategory" change="onSelectChange" forceSelection="true" items="{ path: '/PAYOUT_VENTURESet' }">
										<core:Item key="{VENTURE}" text="{VENTURE}"/>
									</Select>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="C" label="Description">
								<fb:control>
									<Select id="slDOIType" change="onSelectChange" forceSelection="true" items="{ path: '/PAYOUT_WELL_NAMESet' }">
										<core:Item key="{WELL_NAME}" text="{WELL_NAME}"/>
									</Select>
								</fb:control>
							</fb:FilterItem> 
							<fb:FilterItem name="D" label="API Number">
								<fb:control>
									<Select id="slVenture" change="onSelectChange" forceSelection="true" >
										<core:Item key="9876543210" text="9876543210"/>
									</Select>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="E" label="Operator Code">
								<fb:control>
									<Select id="slWell" change="onSelectChange" forceSelection="true" >
										<core:Item key="0000200" text="0000200"/>
									</Select>
								</fb:control>
							</fb:FilterItem>
                            <!-- <fb:FilterItem name="k1" >
							<fb:control>
							<Button
								text=""
								
								type="Transparent"/>
									</fb:control>
								</fb:FilterItem> -->
							<fb:FilterItem name="F" label="Operator Name">
								<fb:control>
									<Select id="slProduct" change="onSelectChange" forceSelection="true" >
										<core:Item key="Stonebridge Drilling" text="Stonebridge Drilling"/>
									</Select>
								</fb:control>
							</fb:FilterItem>
                            <fb:FilterItem name="I" label="Begin Date">
								<fb:control>
									<DatePicker id="idIssueDate1" displayFormat="MM/dd/yyyy" change="onChangeIssueDate"/>
								</fb:control>
							</fb:FilterItem>
							
                            <fb:FilterItem name="issueDate" label="End Date">
								<fb:control>
									<DatePicker id="idIssueDate" displayFormat="MM/dd/yyyy" change="onChangeIssueDate"/>
								</fb:control>
							</fb:FilterItem>
                            <fb:FilterItem name="G" label="Status">
								<fb:control>
									<Select id="slProduct1" change="onSelectChange" forceSelection="true">
										<core:Item key="Active" text="Active"/>
										<core:Item key="Inactive" text="Inactive"/>
									</Select>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="H" label="Payout Basis">
								<fb:control>
									<Select id="slProduct2" change="onSelectChange" forceSelection="true" items="{ path: '/PAYOUT_REPORTING_FREQUENCYSet' }">
										<core:Item key="{REPORTING_FREQUENCY}" text="{REPORTING_FREQUENCY}"/>
									</Select>
								</fb:control>
							</fb:FilterItem>
							
							
							<fb:FilterItem name="balAdj" label="Type">
								<fb:control>
									<Input id="balAdj" placeholder="" value="{oModel>/BalAdjLineItemTotal}">
										<!--<core:Item text="{oModel>/BalAdjLineItemTotal}"/>-->
									</Input>
								</fb:control>
							</fb:FilterItem>
                             <!-- <fb:FilterItem name="k11" >
							<fb:control>
							<Button
								text="Balance"
								
								type="Accept"/>
									</fb:control>
								</fb:FilterItem> -->
							<fb:FilterItem name="J" label="Reason">
								<fb:control>
									<Select id="slVen" change="onSelectChange" forceSelection="true" items="{ path: '/' }">
										<core:Item key="{}" text="{}"/>
									</Select>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="k" label="Comments">
								<fb:control>
									<Input value=""  width="100%"/>
								</fb:control>
							</fb:FilterItem>
                            <fb:FilterItem name="k111" label="Internal Comments">
								<fb:control>
									<Input value=""  width="100%"/>
								</fb:control>
							</fb:FilterItem>
							<!-- <fb:FilterItem name="l" label="JV Equity Group">
								<fb:control>
									<Select id="slVen2" change="onSelectChange" forceSelection="true" items="{ path: '/' }">
										<core:Item key="{}" text="{}"/>
									</Select>
								</fb:control>
							</fb:FilterItem> -->
							
						</fb:filterItems>
					</fb:FilterBar>
				</f:content>
			</f:DynamicPageHeader>
		</f:header>
		<!-- DynamicPage Content -->
		<f:content>
			<Table id="idProductsTable" inset="false" items="{ path: '/Payout_hdrSet' }">
				<headerToolbar>
					<OverflowToolbar>
						<content>
							<Title text="Non-Operated Payout Details" level="H2"/>
							<!--<ToolbarSpacer width="65em"/>-->
							<ToolbarSpacer/>
							<!--<ComboBox id="idARPAPopinLayout" placeholder="Popin layout options" change="onPopinLayoutChanged">-->
							<!--	<items>-->
							<!--		<core:Item text="Block" key="Block"/>-->
							<!--		<core:Item text="Grid Large" key="GridLarge"/>-->
							<!--		<core:Item text="Grid Small" key="GridSmall"/>-->
							<!--	</items>-->
							<!--</ComboBox>-->
							<Label text="Sticky options:"/>
							<CheckBox text="ColumnHeaders" select="onSelect"/>
							<CheckBox text="HeaderToolbar" select="onSelect"/>
							<CheckBox text="InfoToolbar" select="onSelect"/>
							<ToggleButton id="ARPAtoggleInfoToolbar" text="Hide/Show InfoToolbar" press="onToggleInfoToolbar"/>
						
				
							<Button id="ARPAtoolRevision"  text="Balance" tooltip="Non-Operated Balance Form" type="Accept" press="onBalance"/>
						
						</content>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Payout ID"/>
						</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Company"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Cost Center"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Description"/>
					</Column>
					<!--newly added-->
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="API Number"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Operator Code"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Operator Nmae"/>
					</Column>
				
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Start Date"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="End Date"/>
					</Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Status"/>
					</Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Payout Basis"/>
					</Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Type"/>
					</Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Reason"/>
					</Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Comments"/>
					</Column>
					<!--newly added-->
				</columns>
				<items>
					<ColumnListItem vAlign="Middle">
						<cells>
								
								<Text text="{oModel>Vname}"/>
								
								<Text text="{oModel>DoiNo}"/>
								<Text text="{oModel>Shtxt}"/>
								<Text text="{oModel>Bukrs}"/>
								<Text text="{oModel>OiuCruser}"/>
								<Text text="{oModel>Land1}"/>
								<Text text="{oModel>PermTmpryCd}"/>
								<Text text="{oModel>StartDate}"/>
								<Text text="{oModel>StartDate}"/>
								<Text text="{oModel>StartDate}"/>
								<Text text="{oModel>StartDate}"/>
								<Text text="{oModel>StartDate}"/>
								
								
							</cells>
					</ColumnListItem>
						
				</items>
			</Table>
		</f:content>
		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Accept"/>
				<Button type="Reject" text="Reject"/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>